@model Basic_Project.Models.Product

@{
    ViewData["Title"] = "Delete_Product";
}

<h1>Delete_Product</h1>

@if (ViewBag.SMESSAGE != null)
{
    <div class="alert-success">@ViewBag.SMESSAGE</div>
}
else if (ViewBag.EMESSAGE != null)
{
    <div class="alert-danger">@ViewBag.EMESSAGE</div>
}

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductQnty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductQnty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MfgDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MfgDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpDate)
        </dd>
    </dl>

    <form asp-action="Delete_Product">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Display_Products">Show All Products</a>

    </form>
</div>
