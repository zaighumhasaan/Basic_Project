@model Basic_Project.Models.Sale

@{
    ViewData["Title"] = "Delete_Sale";
}

<center><h1>Delete Sale</h1></center>

@if (ViewBag.SMESSAGE != null)
{
    <div class="alert-success">@ViewBag.SMESSAGE</div>
}
else if (ViewBag.EMESSAGE != null)
{
    <div class="alert-danger">@ViewBag.EMESSAGE</div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaleProduct)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaleProduct)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaleDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaleDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaleQnty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaleQnty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>

    <form asp-action="Delete_Sale">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-success btn-sm" asp-action="Display_Sale">Back to List</a>
    </form>
</div>
